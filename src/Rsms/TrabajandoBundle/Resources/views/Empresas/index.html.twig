{% extends '::base.html.twig' %}
{% block entidad %}  Empresas {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    Listar Empresas 
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr role="row">
                                    <th>Id</th>          
                                    <th>Cliente</th>
                                    <th>Nombre</th>
                                    <th>Trabajando</th>                                    
                                    <th>Cantidad Sms Usados</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr class="odd gradeX">
                                        <td><a href="{{ path('empresas_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>
                                        <td>{{ entity.cliente }}</td>
                                        <td>{{ entity.nombre }}</td> 
                                        <td>{{ entity.trabajandoid }}</td>
                                        <td>{{ entity.cantidadSmsUsados }}</td>                                                                               
                                        <td class="center">
                                            <a href="{{ path('empresas_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Ver</a>                                            
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}