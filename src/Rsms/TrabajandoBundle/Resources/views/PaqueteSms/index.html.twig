{% block menuActP %}{% endblock %}

{% block menuLateral %}  
    <div class="span3">
        <div class="well sidebar-nav">
            <ul class="nav nav-list">
                <li class="nav-header">Paquetes Sms</li>
                <li class="active"><a href="{{ path ('paquetesms') }}">Listar</a></li> 
                <li class=""><a href="{{ path ('paquetesms_new') }}">Crear</a></li>              
