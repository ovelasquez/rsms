{% extends '::base.html.twig' %}

{% block entidad %}  Reclutamiento Sms {% endblock %}
{% block Navigation %} {% endblock %}

{% block body %}
    <button id='clienteSmsUsados' style='display:none' class="btn btn-success" data-toggle="modal" data-target="#modalclienteSmsUsados">
        Ver
    </button>
    <!-- Modal -->
    <div class="modal fade" id="modalclienteSmsUsados" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Clientes Sms Consumidos </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    Listar
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-clienteSmsUsados">
                                            <thead>
                                                <tr role="row">
                                                    <th>Id</th>
                                                    <th>Clientes</th>                                                   
                                                    <th>Cantidad</th>                                                    

                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for cliente in clientes %}
                                                    <tr class="odd gradeX">
                                                        <td>{{ loop.index }}</td>
                                                        <td>{{ cliente.getNombre() }}</td>                                                       
                                                        <td>{{ cliente.getCantidadSmsUsados() |number_format(0, ',', '.') }}</td>                                                           
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

                </div>
            </div>
        </div>
    </div>


    <button id='clientePaqueteSms' style='display:none' class="btn btn-success" data-toggle="modal" data-target="#modalClientePaqueteSms">
        Ver
    </button>
    <!-- Modal -->
    <div class="modal fade" id="modalClientePaqueteSms" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">Clientes Paquete Sms </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-success">
                                <div class="panel-heading">
                                    Listar
                                </div>
                                <div class="panel-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered table-hover" id="dataTables-cPsms">
                                            <thead>
                                                <tr role="row">
                                                    <th>Id</th>
                                                    <th>Clientes</th>
                                                    <th>Paquetes</th>
                                                    <th>Cantidad</th>
                                                    <th>Fecha</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for cPsms in clientePaqueteSms %}
                                                    <tr class="odd gradeX">
                                                        <td>{{ loop.index }}</td>
                                                        <td>{{ cPsms.getCliente().getNombre() }}</td>
                                                        <td>{{ cPsms.getPaqueteSms().getNombre() }}</td>
                                                        <td>{{ cPsms.getPaqueteSms().getCantidadSms() |number_format(0, ',', '.') }}</td>   
                                                        <td>{{ cPsms.getFecha() |date('Y-m-d H:i:s') }}</td> 
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.row (nested) -->
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-shopping-cart fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">


                                {{ clientesContadorSmsAdquiridos |number_format(0, ',', '.') }}</div>
                            <div></div>
                        </div>
                    </div>
                </div>
                <a id="smsAdquiridos" href="#">
                    <div class="panel-footer">
                        <span class="pull-left">SMS Adquiridos</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
                            
                            <div class="col-lg-3 col-md-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-comments fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ clientesContadorSmsUsados |number_format(0, ',', '.')}}</div>
                            <div></div>
                        </div>
                    </div>
                </div>
                <a id = 'smsUsados' href="#">
                    <div class="panel-footer">
                        <span class="pull-left">SMS Consumidos</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-support fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ (clientesContadorSmsAdquiridos - clientesContadorSmsUsados) | number_format(0, ',', '.') }}</div>
                            <div></div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">SMS Disponibles</span>
                        <span class="pull-right"><!--i class="fa fa-arrow-circle-right"></i--></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-tasks fa-3x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge"></div>
                            <div>{{ totalClientes }}</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">
                            <a href="{{ path ('clientes') }}">Clientes</a>
                        </span>
                        <span class="pull-right"><!--i class="fa fa-arrow-circle-right"></i--></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bar-chart-o fa-fw"></i> Area Chart Example
                    <div class="pull-right">

                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="morris-area-chart"></div>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>
        <!-- /.col-lg-8 -->
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i> Panel Clientes
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="list-group">
                        {% for cliente in clientes %}
                            <a href="{{ path('clientes_show', { 'id': cliente.getId() })}}" class="list-group-item">
                                <i class=""></i> {{ cliente.getNombre() }}
                                <span class="pull-right text-muted small"><em>{{ cliente.getCantidadSmsUsados() |number_format(0, ',', '.') }} Sms usados</em>
                                </span>
                            </a>
                        {% endfor %}



                    </div>
                    <!-- /.list-group -->
                    <a href="{{ path('clientes')}}" class="btn btn-default btn-block">Ver Clientes</a>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>
        <!-- /.col-lg-4 -->
        
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="fa fa-bell fa-fw"></i> Panel Notificaciones
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="list-group">
                        <a href="#" class="list-group-item">
                            <i class="fa fa-comment fa-fw"></i> New Comment
                            <span class="pull-right text-muted small"><em>4 minutes ago</em>
                            </span>
                        </a>
                        <a href="#" class="list-group-item">
                            <i class="fa fa-twitter fa-fw"></i> 3 New Followers
                            <span class="pull-right text-muted small"><em>12 minutes ago</em>
                            </span>
                        </a>
                        <a href="#" class="list-group-item">
                            <i class="fa fa-envelope fa-fw"></i> Message Sent
                            <span class="pull-right text-muted small"><em>27 minutes ago</em>
                            </span>
                        </a>
                        <a href="#" class="list-group-item">
                            <i class="fa fa-tasks fa-fw"></i> New Task
                            <span class="pull-right text-muted small"><em>43 minutes ago</em>
                            </span>
                        </a>
                        <a href="#" class="list-group-item">
                            <i class="fa fa-upload fa-fw"></i> Server Rebooted
                            <span class="pull-right text-muted small"><em>11:32 AM</em>
                            </span>
                        </a>

                    </div>
                    <!-- /.list-group -->
                    <a href="#" class="btn btn-default btn-block">Ver Alertas</a>
                </div>
                <!-- /.panel-body -->
            </div>

        </div>
        <!-- /.col-lg-4 -->

        
    </div>

{% endblock %}
